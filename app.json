{
  "expo": {
    "name": "snapchat-clone",
    "slug": "snapchat-clone",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./local/assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "yellow"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "infoPlist": {
      "NSCameraUsageDescription": "Please accept your camera if you want to use this application",
      "ACCESS_BACKGROUND_LOCATION": "Prihvatite lokaciju molimo vas"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
